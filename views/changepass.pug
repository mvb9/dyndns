extends layout
block content
  .container
    .main-div
      form(method="post" action= "/users/changepass")
        h4 Enter new password
        if success_msg
          p #{success_msg}
        if error_msg
          p #{error_msg}
        if error
          p #{error} 
        .row
          .col
            label.col-form-label(for="userstatic") Username:
          .col
            input#userstatic.form-control-plaintext.text-left(type="text" name='username' readonly value=username)
        .form-group
          label(for='inputPassword3') Password
          input#inputPassword3.form-control(type='password', name='password')
        .form-group
          label(for='inputPassword4') Confirm Password
          input#inputPassword4.form-control(type='password', name='password2')
        .form-group
          button.btn.btn-success(type='submit') Save